	<script type="text/javascript">
	function Toplama()
	{ 
     s1=document.getElementById("buton1").value;  
	s2=document.getElementById("buton2").value;
	textboxresult.value=parseInt(s1)+parseInt(s2);
    }
	
    function   Cikartma()
    { 
         s1=document.getElementById("buton1").value;  
	s2=document.getElementById("buton2").value;
	textboxresult.value=parseInt(s1)-parseInt(s2)
    }
	function   Carpma()
    {  
        s1=document.getElementById("buton1").value;  
	s2=document.getElementById("buton2").value;
	textboxresult.value=parseInt(s1)*parseInt(s2);
    }
	function   Bolme()
    {  s1=document.getElementById("buton1").value;   
	s2=document.getElementById("buton2").value; if(s2==0) 
	alert("Bölen sıfıra eşit olamaz.") 
	else textboxresult.value=parseInt(s1)/parseInt(s2);}</script>
